<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE suite SYSTEM "http://testng.org/testng-1.0.dtd">
<suite name="Selenium Tests">

    <test name="Test Positive 1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.PositiveLoginPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Test Positive 2">
        <parameter name="browser" value="edge"/>
        <classes>
            <class name="tests.PositiveLoginPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Test Positive 3">
        <parameter name="browser" value="firefox"/>
        <classes>
            <class name="tests.PositiveLoginPageTest"/>
        </classes>
    </test> <!-- Test -->

    <test name="Test negative 1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.NegativeLoginTests"/>
        </classes>
    </test>

    <test name="Test exceptions 1">
        <parameter name="browser" value="chrome"/>
        <classes>
            <class name="tests.ExceptionsTest"/>
        </classes>
    </test>

</suite>